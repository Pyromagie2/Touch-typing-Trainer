<UserControl x:Class="Touch_typing_Trainer.StartPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Touch_typing_Trainer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    
    

        

          
             <DockPanel>
                 
                 <StackPanel HorizontalAlignment="Center">
                     <Label HorizontalAlignment="Center" FontSize="30" FontWeight="Bold" Margin="0,0,0,20">Touch Typing Trainer</Label>
                     <Button Name="DifficultyLow" Style="{StaticResource DifficultyButtons}" Click="Choose_OnClick">Choose a exercise!</Button>
                     <Button Name="ExitButton" Style="{StaticResource DifficultyButtons}" Click="ExitButton_OnClick">Exit</Button>
                     
                 
                 </StackPanel> 
             </DockPanel>
                     
                
      
           
           

      
        

</UserControl>
