<UserControl x:Class="Touch_typing_Trainer.Training"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Touch_typing_Trainer"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             Focusable="True"
             
             >
             
             
    
    <Grid Background="White">

        <TextBox x:Name="HiddenInput"
                 Width="0" 
                 Height="0"
                 Opacity="0"
                 TextChanged="HiddenInput_TextChanged"/>
        
    
        <StackPanel Margin="20">
            <TextBlock x:Name="ZielTextBlock" 
                       FontSize="24"
                       Text="Tippe hier..."/>
                       
            <TextBlock x:Name="InfoText"
                       Margin="0,20,0,0"
                       Text="Klicke hier und fang an zu tippen!"/>
        </StackPanel>
    </Grid>
</UserControl>
