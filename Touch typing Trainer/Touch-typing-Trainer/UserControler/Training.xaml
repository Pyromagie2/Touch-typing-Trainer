<UserControl x:Class="Touch_typing_Trainer.Training"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:Touch_typing_Trainer"
             mc:Ignorable="d"
             d:DesignHeight="500" d:DesignWidth="800"
             Focusable="True"
             
             >
             
             
    

     
            
            
            <StackPanel Margin="20">
                <Label HorizontalAlignment="Center" FontSize="50" FontWeight="DemiBold">Text to Type:</Label>
                <TextBlock Name="trainingText" Width="500" Height="200" FontSize="30" >
                
                
                </TextBlock>
                <Button Click="ButtonBase_OnClick" Style="{StaticResource DifficultyButtons}" Width="300">Choose another exercise!</Button>

            </StackPanel>
            

        
        
    
   
</UserControl>
